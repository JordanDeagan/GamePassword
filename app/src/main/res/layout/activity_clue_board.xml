<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClueBoard">

    <ImageView
        android:id="@+id/clueBoard"
        android:layout_width="360dp"
        android:layout_height="360dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/board_foreground" />

    <ImageView
        android:id="@+id/Study"
        android:layout_width="96dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:alpha="0"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@id/clueBoard"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/cardview_light_background" />

    <ImageView
        android:id="@+id/RoomChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@color/cardview_light_background"
        app:layout_constraintBottom_toTopOf="@+id/BoardBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clueBoard" />

    <Button
        android:id="@+id/BoardSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="@+id/BoardBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/BoardBack" />

    <Button
        android:id="@+id/BoardBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/BoardSubmit"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/Hall"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:alpha="0"
        android:src="@color/cardview_light_background"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/clueBoard"
        app:layout_constraintTop_toTopOf="@+id/clueBoard" />

    <ImageView
        android:id="@+id/Lounge"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:alpha="0"
        android:src="@color/cardview_light_background"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/clueBoard"
        app:layout_constraintTop_toTopOf="@+id/clueBoard" />

    <ImageView
        android:id="@+id/Library"
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="97dp"
        android:alpha="0"
        android:src="@color/cardview_light_background"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/clueBoard"
        app:layout_constraintTop_toTopOf="@+id/clueBoard" />

    <ImageView
        android:id="@+id/Billiard"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="174dp"
        android:alpha="0"
        android:src="@color/cardview_light_background"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/clueBoard"
        app:layout_constraintTop_toTopOf="@+id/clueBoard" />

    <ImageView
        android:id="@+id/Conservatory"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="33dp"
        android:alpha="0"
        android:src="@color/cardview_light_background"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/clueBoard"
        app:layout_constraintStart_toStartOf="@+id/clueBoard" />

    <ImageView
        android:id="@+id/Ball"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="130dp"
        android:layout_marginBottom="51dp"
        android:alpha="0"
        android:src="@color/cardview_light_background"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/clueBoard"
        app:layout_constraintStart_toStartOf="@+id/clueBoard" />

    <ImageView
        android:id="@+id/Kitchen"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="35dp"
        android:alpha="0"
        android:src="@color/cardview_light_background"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/clueBoard"
        app:layout_constraintEnd_toEndOf="@+id/clueBoard" />

    <ImageView
        android:id="@+id/Dining"
        android:layout_width="107dp"
        android:layout_height="85dp"
        android:layout_marginTop="136dp"
        android:alpha="0"
        android:src="@color/cardview_light_background"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/clueBoard"
        app:layout_constraintTop_toTopOf="@+id/clueBoard" />
</androidx.constraintlayout.widget.ConstraintLayout>